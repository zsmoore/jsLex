{
    "env": {
        "es6": true,
        "node": true
    },
    "parser": "babel-eslint",
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module",
        "impliedStrict": true
    },
    "rules": {
        "no-extra-parens": 2,
        "block-scoped-var": 2,
        "class-methods-use-this": 2,
        "complexity": [
            "warn",
            {"max":6}
        ],
        "curly": [
            "error",
            "all"
        ],
        "dot-location": 0,
        "dot-notation": 2,
        "eqeqeq": 2,
        "no-alert": 2,
        "no-caller": 2,
        "no-else-return": 2,
        "no-empty-function": 2,
        "no-eq-null": 2,
        "no-eval": 2,
        "no-extend-native": 2,
        "no-extra-bind": 2,
        "no-extra-label": 2,
        "no-floating-decimal": 2,
        "no-implicit-coercion": 2,
        "no-implied-eval": 2,
        "no-invalid-this": 2,
        "no-iterator": 2,
        "no-labels": 2,
        "no-lone-blocks": 2,
        "no-loop-func": 2,
        "no-magic-numbers": 1,
        "no-multi-spaces": 2,
        "no-multi-str": 2,
        "no-new": 2,
        "no-new-func": 2,
        "no-new-wrappers": 2,
        "no-proto": 2,
        "no-return-assign": 2,
        "no-return-await": 2,
        "no-script-url": 2,
        "no-self-compare": 2,
        "no-sequences": 2,
        "no-throw-literal": 2,
        "no-unmodified-loop-condition": 2,
        "no-unused-expressions": 2,
        "no-useless-call": 2,
        "no-useless-return": 2,
        "no-void": 2,
        "vars-on-top": 2,
        "yoda": [
             "error",
             "never"
        ],
        "no-catch-shadow": 2,
        "no-label-var": 2,
        "no-undefined": 2,
        "no-use-before-define": 2,
        "array-bracket-newline": [
             "error",
             {"multiline" : true}
        ],
        "array-bracket-spacing": 2,
        "array-element-newline": [
             "error",
             {"multiline": true}
         ],
         "block-spacing": [
             "error",
             "always"
         ],
         "brace-style": [
             "error",
             "1tbs",
             {"allowSingleLine" : true}
         ],
         "comma-dangle": [
             "error",
             "always-multiline"
         ],
         "comma-spacing": [
             "error",
             {"after": true}
         ],
         "func-call-spacing": [
             "error",
             "never"
         ],
         "indent": [
             "error",
             4
         ],
         "key-spacing": [
             "error",
             {"align": "colon"}
         ],
         "keyword-spacing": [
             "error",
             { "before": true,
               "after": true }
         ],
         "linebreak-style": [
             "error",
             "unix"
         ],
         "max-len": [
            "warn",
            {
                "code": 120
            }
         ],
         "no-console": 2,
         "no-trailing-spaces": 2,
         "quotes": [
            "error",
            "single",
            { "avoidEscape": true }
         ],
         "semi": [
            "error",
            "always"
         ],
         "semi-style": 2,
         "space-infix-ops": 2,
         "space-before-blocks": 2,
         "no-var": 2,
         "prefer-const": 1,
         "sort-imports": 2,
         "no-multiple-empty-lines": [
            "error",
            { "max": 1 }
         ]
    }
}
